<main>

    <section id="details-page">

        <div class="main_card">
            <div class="card_left">
                <div class="card_datails">

                    <h1>Name: {{post.name}}</h1>
                    <h3>Created by an author: {{username}}</h3>
                    <div class="card_character">
                        <p class="card-species">Species: {{post.species}}</p>
                        <p class="card-skin">Skin colour: {{post.skinColor}}</p>
                        <p class="card-eye">Eye Colour: {{post.eyeColor}}</p>
                    </div>

                    <p class="disc">Description: {{post.description}}</p>

                    {{#if isAuthenticated}}
                        <div class="social-btn">
                        {{#if isOwner}}
                            <a href="/posts/{{post._id}}/edit" class="edit-btn">Edit</a>
                            <a href="/posts/{{post._id}}/delete" class="del-btn">Delete</a>
                        {{else}}
                            {{#if hasVoted}}
                                <p class="thanks-for-vote">Thanks For Voting</p>
                            {{else}}
                                <a href="/posts/{{post._id}}/vote" class="vote-up">Vote</a>
                            {{/if}}
                        {{/if}}
                        </div>
                    {{/if}}
                </div>
            </div>
            <div class="card_right">
                <img src="{{post.imgUrl}}" alt="image">
            </div>
        </div>

    </section>

    <section id="votes">
        <div class="vote-info">
            <div class="card_left">
                <div class="card_datails">
                    <h1>Votes</h1>
                    <div class="card_vote">
                        <p class="PV">Total rating of votes: {{votersAmount}}</p>
                    </div>
                    {{#if isEmpty}}
                        <p class="disc">People who voted for the post - No one has voted yet.</p>
                    {{else}}
                        <p class="disc">People who voted for the post - {{voterEmails}}</p>
                    {{/if}}
                </div>
            </div>
        </div>
    </section>

</main>